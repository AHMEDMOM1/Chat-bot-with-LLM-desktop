<Window x:Class="ChatBotApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatBotApp"
        xmlns:vm="clr-namespace:ChatBotApp.ViewModels"
        xmlns:conv="clr-namespace:ChatBotApp.Converters"
        mc:Ignorable="d"
        Title="AI Chatbot" Height="600" Width="450"
        Background="#1E1E1E" Foreground="White">
    <Window.Resources>
        <conv:BoolToAlignmentConverter x:Key="AlignmentConverter"/>
        <conv:BoolToBrushConverter x:Key="BrushConverter"/>
        
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3F3F3F"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="1" CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SendButton" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1086E0"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#555555"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Settings Area -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Gemini API Key" FontSize="12" Foreground="#888888" Margin="0,0,0,3"/>
            <PasswordBox x:Name="ApiKeyBox" PasswordChanged="ApiKeyBox_PasswordChanged" 
                         Background="#2D2D2D" Foreground="White" BorderBrush="#3F3F3F" Height="25"/>
        </StackPanel>

        <!-- Chat Area -->
        <Border Grid.Row="1" Background="#121212" CornerRadius="10" Padding="5">
            <ListBox ItemsSource="{Binding Messages}" Background="Transparent" BorderThickness="0" 
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Focusable" Value="False"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <ContentPresenter/>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="5" Padding="12,8" CornerRadius="15" MaxWidth="300"
                                HorizontalAlignment="{Binding IsUser, Converter={StaticResource AlignmentConverter}}"
                                Background="{Binding IsUser, Converter={StaticResource BrushConverter}}">
                            <TextBlock Text="{Binding Content}" TextWrapping="Wrap" Foreground="White"/>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>

        <!-- Input Area -->
        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="InputBox" Grid.Column="0" Style="{StaticResource ModernTextBox}" 
                     Text="{Binding UserInput, UpdateSourceTrigger=PropertyChanged}"
                     KeyDown="InputBox_KeyDown"
                     AcceptsReturn="False" Height="40" VerticalContentAlignment="Center"
                     Tag="Type a message..."/>
            <Button Grid.Column="1" Content="Send" Command="{Binding SendCommand}" 
                    Style="{StaticResource SendButton}" Margin="5,0,0,0" Width="70" Height="40"/>
        </Grid>
        
        <!-- Loading Overlay -->
        <Border Grid.Row="1" Background="#80000000" Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"
                CornerRadius="10">
            <TextBlock Text="AI is thinking..." VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White"/>
        </Border>
    </Grid>
</Window>
